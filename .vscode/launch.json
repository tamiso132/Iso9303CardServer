{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug GLFW Vulkan",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/MyProject",
      "preLaunchTask": "Run script",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "/usr/lib/clang/20/lib/linux:${env:LD_LIBRARY_PATH}"
        },
        // {
        //   "name": "LD_PRELOAD",
        //   "value": "/usr/lib/clang/20/lib/linux/libclang_rt.ubsan_standalone-x86_64.so"
        // }
      ],
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "Debug X Opengl",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/MyProject",
      "preLaunchTask": "Run force x script",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "${workspaceFolder}/build"
        }
      ],
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "Debug WIndows",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/MyProject.exe",
      "preLaunchTask": "Run windows",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "${workspaceFolder}/build"
        }
      ],
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"
    },
    {
      "name": "Debug in External Console",
      "type": "coreclr",
      "justMyCode": false,
      "request": "launch",
      "preLaunchTask": "dotnet build",
      "program": "${workspaceFolder}/bin/Debug/net9.0/Backend.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "stopAtEntry": false
    }
  ]
}